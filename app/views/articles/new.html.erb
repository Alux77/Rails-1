<%= form_for :article, url: articles_path  do |f| %>

  <p>
    <center><%= f.label :title %><br></center>
    <center><%= f.text_field :title %></center>
  </p>
 
  <p>
    <center><%= f.label :text %><br></center>
    <center><%= f.text_area :text %></center>
  </p>
 
  <p>
    <center><%= f.submit %></center>
  </p>
<% end %>

<br>

<% if @article.errors.any? %>
    <center><font color="red"><div id="error_explanation">
      <h2>
        <%= pluralize(@article.errors.count, "MISTAKES") %>
        LOOOSER
      </h2>
      <ul>
        <% @article.errors.full_messages.each do |msg| %>
        <p><%= msg %></p>
        <% end %>
      </ul>
    </div></font></center>
  <% end %>

<br><br>

